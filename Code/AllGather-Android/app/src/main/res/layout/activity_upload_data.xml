<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/upload_data_title"
            android:layout_width="89dp"
            android:layout_height="42dp"
            android:text="Data Upload"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="98dp" />

        <ProgressBar
            android:id="@+id/dataUploadProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:visibility="gone" />



        <TextView
            android:id="@+id/files_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unuploaded Files:"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#000" />
        <ListView
            android:id="@+id/files_list"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:divider="@color/black"
            android:dividerHeight="2dp"
            android:scrollbars="vertical"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/uploaded_files_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uploaded Files:"
            android:background="@android:drawable/editbox_background"
            android:drawableRight="@android:drawable/arrow_down_float"
            android:drawablePadding="16dp"
            android:textStyle="bold"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#000" />
        <ListView
            android:id="@+id/uploaded_files_list"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:divider="@color/black"
            android:dividerHeight="2dp"
            android:scrollbars="vertical"/>



        <Button
            android:id="@+id/select_files_button"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:text="Upload Files" />

        <Button
            android:id="@+id/select_files_button_no_mp4"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:text="Upload Files Without Video" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>